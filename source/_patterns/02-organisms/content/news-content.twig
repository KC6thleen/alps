{% if carousel %}
  {% include '@organisms/sections/hero-carousel.twig' %}
{% endif %}
<div class="l-grid l-grid--2-col--at-medium with-divider">
  <div class="l-grid-item">
    <div class="u-spacing">
      <div class="u-spacing--half">
        <h2 class="u-font--tertiary--l u-theme--primary-text-color u-padding u-padding--double--top u-padding--half--bottom">Vivamus ornare</h2>
        <hr>
      </div>
      {% for block in media_blocks %}
        <div class="u-padding">{% include '@molecules/blocks/media-block.twig' with block %}</div>
        <hr>
      {% endfor %}
    </div>
  </div> <!-- /.l-grid-item -->
  <div class="l-grid-item u-padding--double--bottom">
    <div class="u-spacing">
      <div class="u-spacing--half">
        <h2 class="u-font--tertiary--l u-theme--primary-text-color u-padding u-padding--double--top u-padding--half--bottom">Duis pretium</h2>
        <hr>
      </div>
      {% if video_block %}
        <div class="u-padding u-padding--zero--bottom">{% include '@molecules/blocks/media-block.twig' with video_block %}</div>
      {% endif %}

      <div class="l-grid l-grid--2-col--split u-padding--half u-padding--zero--top">
        <div class="l-grid-item u-spacing--half">
          {% for block in video_block_list %}
            <div class="u-padding--half--left u-padding--half--right">{% include '@molecules/blocks/media-block.twig' with block %}</div>
          {% endfor %}
        </div>
        <div class="l-grid-item u-spacing--half">
          {% for block in video_block_list %}
            <div class="u-padding--half--left u-padding--half--right">{% include '@molecules/blocks/media-block.twig' with block %}</div>
          {% endfor %}
        </div>
      </div> <!-- /.l-grid--2-col--split -->

      <hr>

      {% include '@molecules/blocks/carousel-block.twig' %}

      <hr>

      <h3 class="u-font--tertiary--m u-theme--secondary-text-color u-padding--top u-padding--left u-padding-right">Sagittis massa</h3>
      {% for block in content_blocks %}
        <div class="content__block u-padding--left u-padding-right">
          <h3 class="u-theme--primary-text-color u-font--secondary--m">{{ block.text.heading | raw}}</h3>
          <p>Proin dictum lobortis luctus. Sed sagittis massa id blandit aliquet. {% if block.text.cta %} <a href="{{ block.url }}" class="u-font--secondary--s u-text-transform--upper u-theme--secondary-text-color"><strong>{{ block.text.cta | raw }}</strong></a> {% endif %}</p>
        </div>
        <hr>
      {% endfor %}

    </div>
  </div> <!-- /.l-grid-item -->
</div> <!-- /.2up--at-medium -->
