<div class="l-wrap">
  <div class="l-wrap__content l-content" role="document">
    {% include '@organisms/global/header.twig' %}
    <main class="l-main u-spacing--double u-padding--double--bottom" role="main">
      {% include '@organisms/sections/page-header.twig' %}
      <section class="l-grid--7-col l-grid--7-col--l--offset-1 l-grid--7-col--break-at--medium l-grid-wrap--6-of-7 u-spacing--until-medium">
        <article class="c-article l-grid-item l-grid-item--m--4-col l-grid-item--l--3-col">
          <div class="c-article__body u-spacing">
            {% if has_short_body %}
              {% include '@organisms/content/body-content-short.twig' %}
            {% else %}
              {% include '@organisms/content/body-content.twig' %}
            {% endif %}
          </div>
        </article>
        <div class="l-sidebar l-grid-item l-grid-item--m--2-col l-grid-item--l--2-col u-spacing--triple u-padding--zero--sides">
          {% if breakout_block %}
            <div class="c-block__breakout u-padding u-padding--double--bottom u-padding--double--top u-spacing u-theme--background-color--darker {{ breakout_block.block_class }}">
              <h3 class="c-block__title u-color--white">{{ breakout_block.title }}</h3>
              <p class="c-block__body u-theme--color--lighter">{{ breakout_block.description }}</p>
              <a href="" class="o-button o-button--lighter">{{ breakout_block.cta }}</a>
            </div>
          {% endif %}
          {% include '@organisms/asides/aside.twig' %}
          {% if related_posts %}
            {% include '@organisms/asides/related-posts.twig' %}
          {% endif %}
        </div> <!-- /.l-sidebar -->
      </section>
    </main> <!-- /.l-main -->
    {% include '@organisms/global/footer.twig' %}
  </div> <!-- /.l-content -->
  {% include '@organisms/asides/sabbath.twig' %}
</div><!-- ./l-wrap -->
