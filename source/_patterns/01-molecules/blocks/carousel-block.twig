{% if carousel_block_default %}
<div class="carousel-block block u-spacing--quarter {{ carousel_block_default.block_class }}">
  {% if carousel_block_default.block_heading %}
    <h2 class="u-font--tertiary--m theme--primary-text-color u-padding u-padding--half--bottom">
      {% if carousel_block_default.heading_icon %}
        <div class="u-icon u-icon--s">{{ carousel_block_default.heading_icon | raw }}</div>
      {% endif %}
      {{ carousel_block_default.block_heading }}
    </h2>
  {% endif %}
  <div class="carousel-block__carousel carousel-nav--4-3">{% include '@molecules/components/carousel.twig' with {'carousel':carousel_block_default.carousel} %}</div>
</div> <!-- /.carousel-block -->
{% endif %}
