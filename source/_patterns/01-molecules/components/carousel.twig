{% if carousel %}
<div class="carousel rel {{ carousel.carousel_outer_class }}">
  <div class="carousel__slides {{ carousel.carousel_class }}">
    {% if carousel.slides %}
      {% if carousel.slides2column %}
        {% include molecules-slide-2-column %}
      {% else %}
        {% include molecules-slide %}
      {% endif %}
    {% endif %}
  </div> <!-- /.carousel__slides -->

  {% if not carousel.no_arrows %}
  <div class="carousel__controls">
    <span class="arrow__prev"><span class="carousel__arrow carousel__arrow--prev icon round">{% include atoms-icon-arrow-left with {'fill_class': 'theme--secondary-fill-color'} %}</span></span>
    <span class="arrow__next"><span class="carousel__arrow carousel__arrow--next icon round">{% include atoms-icon-arrow-right with {'fill_class': 'theme--secondary-fill-color'} %}</span></span>
  </div> <!-- /.carousel__controls -->
  {% endif %}

</div> <!-- /.carousel -->
{% endif %}
