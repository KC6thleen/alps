{% if accordion %}
<div class="accordion rel spacing--half {{ accordion.accordion_class }}">
  {% if accordion.accordion_list %}
  <div class="accordion__item spacing--quarter">
    <div class="accordion__heading js-toggle-parent va--middle"><span class="icon icon--m accordion__arrow">{% include atoms-icon-arrow-right with {'fill_class': 'fill--blue'} %}</span> <span class="font--secondary--m dib">{{ accordion.accordion_heading }}</span></div>
    <div class="accordion__content">{% include molecules-media-block with {'block_inner_class': 'block__row'} %}</div>
  </div>
  {% endif %}
</div> <!-- /.accordion -->
{% endif %}
