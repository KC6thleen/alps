{% if primary_nav %}
<nav class="c-primary-nav" role="navigation">
  <ul class="c-primary-nav__list">
    {% for item in primary_nav.items %}
      <li class="c-primary-nav__list-item u-theme--link-hover--base js-toggle {% if item.subnav %}{{ 'has-subnav u-theme--background-color--darker' }}{% endif %}" {% if item.subnav %} data-prefix="this" {% endif %}>
        <a href="{{ item.url }}" class="c-primary-nav__link u-font--primary-nav u-color--gray--dark u-theme--link-hover--base u-theme--border-color--base {% if item.is_active %}active{% endif %}">
          {{ item.text }} {% if item.subnav %}<span class="c-subnav__arrow o-arrow--down u-path-fill--gray"></span>{% endif %}
        </a>
        {% if item.subnav %}
          <ul class="c-primary-nav__subnav c-subnav u-theme--background-color--darker">
            {% for sub_item in item.subnav.items %}
              <li class="c-primary-nav__subnav__list-item c-subnav__list-item u-background-color--gray--light">
                <a class="c-primary-nav__subnav__link c-subnav__link u-color--gray--dark u-theme--link-hover--base" href="{{ sub_item.url }}">{{ sub_item.text }}</a>
              </li>
            {% endfor %}
          </ul> <!-- /.c-primary-nav__subnav -->
        {% endif %}
      </li>
    {% endfor %}
    <li class="c-primary-nav__list-item c-primary-nav__list-item__toggle js-toggle-menu">
      <span class="u-icon u-icon--xs u-path-fill--gray">{% include '@atoms/icons/icon-plus.twig' %}</span>
    </li>
  </ul> <!-- /.c-primary-nav__list -->
</nav> <!-- /.c-primary-nav -->
{% endif %}
